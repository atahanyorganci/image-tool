{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"//#format": {},
		"check": {
			"inputs": ["src/**/*.ts"]
		},
		"check:watch": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["//#format"]
		},
		"lint:fix": {
			"cache": false
		},
		"build": {
			"dependsOn": ["check", "lint"]
		}
	}
}
