{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"//#lint": {},
		"//#lint:fix": {
			"cache": false
		},
		"attw": {
			"dependsOn": ["build"]
		},
		"api-extractor": {
			"dependsOn": ["build"]
		},
		"build": {
			"dependsOn": ["check", "lint"]
		},
		"check": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*"]
		},
		"check:watch": {
			"cache": false,
			"persistent": true
		},
		"ci": {
			"dependsOn": ["build", "test", "attw", "api-extractor"]
		},
		"lint": {},
		"lint:fix": {
			"cache": false
		},
		"test": {}
	}
}
